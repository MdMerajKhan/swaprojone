version: "3"
services:
  mysql-standalone:
    image: mysql:5.6
    ports:
      - 3305:3306
    healthcheck:
        test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
        timeout: 20s
        retries: 10
    cap_add:
        - SYS_NICE # CAP_SYS_NICE
    environment:
      - MYSQL_DATABASE=swaproj
      - MYSQL_ROOT_PASSWORD=1986
  app:
    build: .
    ports:
      - 8086:8086
    depends_on:
      mysql-standalone:
        condition: service_healthy
